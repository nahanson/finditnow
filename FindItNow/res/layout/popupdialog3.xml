<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_root"
              android:orientation="vertical"
              android:layout_width="275dp"
              android:layout_height="wrap_content"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              >
    <TextView android:id="@+id/dialogTitle"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textColor="#5EC22D"
              android:textSize="18dp"
              android:textStyle="bold"
              />
    <TextView android:id="@+id/categoryName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#FFF"
              android:layout_marginBottom="15dp"
              />
    <TextView android:id="@+id/distanceText"
    		  android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textColor="#FFF"
              />
   <TextView android:id="@+id/timeReachText"
    		  android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textColor="#FFF"
              />
   <TextView android:id="@+id/outDoorText"
   			android:layout_below="@id/timeReachText"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:textColor="#FFF"
   		/>
   <Button android:id="@+id/showFlrButt"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:text="Show Floors"
    		android:layout_below="@id/timeReachText"
    		android:layout_marginTop="20dp"
    		/>
   	<ExpandableListView android:id="@+id/flrList"
   		   	android:layout_below="@id/showFlrButt"
   			android:layout_height="fill_parent"
    		android:layout_width="fill_parent"
	    	/>
</LinearLayout>