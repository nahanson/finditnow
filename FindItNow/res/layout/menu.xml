<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical">
	   
    <TextView
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:layout_marginTop="6dip"
		android:background="#33CCB3"
    	android:textSize="20pt"
    	android:textColor="#FFFFFF"
    	android:textStyle="bold"
    	android:shadowColor="#111111"  
        android:shadowRadius="2"  
    	android:text="FindItNow"/>
    <TextView
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:layout_marginTop="6dip"
    	android:background="#99CC33"
    	android:textColor="#111111"
    	android:textSize="8pt"
    	android:text="Item Locator for UW"/>	
    	
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_marginTop="5dip"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1">
  		<Button
	    	android:id="@+id/BuildingsButton"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="Buildings"/>
		<Button
			android:id="@+id/VendingButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Vending"/>
	</LinearLayout>
	
	<LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1">
   	    <Button
	    	android:id="@+id/RestroomsButton"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="Restroom"/>
	    <Button
	    	android:id="@+id/CoffeeButton"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="Coffee"/>
    </LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1">
	    <Button
	    	android:id="@+id/RecyclingButton"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="Recycling"/>
	    <Button
	    	android:id="@+id/DiningButton"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="Dining"/>
	</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1">
			<Button
		    	android:id="@+id/SuppliesButton"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="Supplies"/>
		    <Button
		    	android:id="@+id/ATMButton"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="ATMs"/>
	</LinearLayout>
</LinearLayout>