<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_rootflr"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingLeft="10dp"
              android:paddingTop="5dp"
              android:paddingRight="5dp"
              android:paddingBottom="5dp"
              android:background="@color/FIN_light"
              >
    <TextView android:id="@+id/floorDetailText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#000000"
              android:textSize="14dp"
              />
    <RelativeLayout
    	android:id="@+id/flrChildLayout"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">   
    	     	
	    <TextView android:id="@+id/flrDetailButton"
	    		android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="5dp"
	            android:textColor="@color/FIN_dark"
	            android:textStyle="bold"
	            android:text="Nothing Here?"
	            android:layout_alignParentRight="true"
                android:textSize="14dp"	            
	            android:background="@drawable/fin_clickable_button_green"/> 
	</RelativeLayout> 
</LinearLayout>