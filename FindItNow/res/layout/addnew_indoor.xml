<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="#fff">
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
	    <TextView
			android:id="@+id/addnew_inheader"
			android:text="Add New Indoor Item"
			android:textColor="#FFFFFF"
			android:textSize="25dp"
			android:textStyle="bold"  
			android:shadowColor="#000000"  
	        android:shadowRadius="1.5"  
			android:background="@color/FIN_dark"
			android:layout_width="fill_parent"
		    android:layout_height="40dp"
		    android:gravity="center"/>
		   	
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:padding="15dp">
			
		<LinearLayout
				android:id="@+id/addnew_building_container"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:background="@color/FIN_light"
				android:layout_marginBottom="15dp">	
		   	
			    <TextView
			    	android:id="@+id/addnew_bspinnertext"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/addnew_inheader"
			        android:paddingLeft="10dp"
			        android:text="Select the building that houses your new item."
			        android:textStyle="bold"
			        android:textColor="#000000"
			        android:textSize="16dp"/>
			    
			    <Spinner 
			        android:id="@+id/addnew_bspinner"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="10dp"
			        android:layout_below="@+id/addnew_bspinnertext"
			        android:prompt="@string/spinner_building"/>
			        
			</LinearLayout>
			
		<LinearLayout
				android:id="@+id/addnew_floor_container"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:background="@color/FIN_light"
				android:layout_marginBottom="15dp">	 
				       
			   <TextView
			    	android:id="@+id/addnew_fspinnertext"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/addnew_bspinner"
			        android:paddingLeft="10dp"
			        android:text="Select the corresponding floor."
			        android:textStyle="bold"
			        android:textColor="#000000"
			        android:textSize="16dp"/>
			        
			   <Spinner 
			        android:id="@+id/addnew_fspinner"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="10dp"
			        android:layout_below="@+id/addnew_fspinnertext"
			        android:prompt="@string/spinner_floor"/>
			</LinearLayout>
	
			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				
			    <Button
			        android:id="@+id/addnew_additem"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@id/addnew_fspinner"
			        android:layout_alignParentRight="true"
			        android:text="Add Item" />
		    </RelativeLayout>
	    
		</LinearLayout>
	</LinearLayout>
</ScrollView>